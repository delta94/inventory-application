<h2>Make changes to {{item.name}}</h2>
<form action="" method="POST" class="create-form" enctype="multipart/form-data">
    <label for="name">Name: </label>
    <input type="text" name="name" minlength="1" required value="{{item.name}}">
    <label for="description">Description: </label>
    <textarea name="description" cols="30" rows="10">{{item.description}}</textarea>
    <label for="category">Category: </label>
    <select name="category">
        <option value="{{item.category._id}}">Computer Accessories</option>
    </select>
    <label for="price">Price: </label>
    <input type="number" name="price" required min="1" value="{{item.price}}">
    <label for="stock">Stock: </label>
    <input type="number" name="stock" required min="0" value="{{item.stock}}">
    <p>Current image:</p>
    <img class="product-image" src="{{item.file_url}}" alt="">
    <label for="image">New image:</label>
    <input type="file" name="image">
    <div class="confirm-update-contain">
        <button>Update</button>
        <button type="button"><a href="/catalog/computer-accessories">Back to Computer Accessories</a></button>
    </div>
</form>
{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{msg}}</li>
    {{/each}}
</ul>
{{/if}}