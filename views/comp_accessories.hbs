<div>
<h2><p>{{title}} available</p> <button class="add-item" type="button"><a href="/catalog/computer-accessories/create">Add item</a></button></h2>
<a class="back-to-categories" href="/catalog/">&leftarrow; Look at Categories</a>

</div>

<section>
    {{#each keyboard_list}}
    <article>
        <figure>
            <a href="{{url}}">
                <img class="product-image" onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200.jpg/f1f5f4/516f4e/?text=Product+Doesn%27t+Have+An+Image+Yet';" src="{{file_url}}" alt="">
            </a>
            <figcaption>
                <h4><a href="{{url}}">{{name}}</a></h4>
                <p><span class="price">Price: ${{price}}</span> &ThickSpace;|&ThickSpace; <span class="stock">Stock: {{stock}}</span></p>
            </figcaption>
        </figure>     
    </article>
    {{/each}}
    {{#each mice_list}}
    <article>
        <figure>
            <a href="{{url}}">
                <img class="product-image" onerror="this.onerror=null;this.src='https://via.placeholder.com/300x200.jpg/f1f5f4/516f4e/?text=Product+Doesn%27t+Have+An+Image+Yet';" src="{{file_url}}" alt="">
            </a>
            <figcaption>
                <h4><a href="{{url}}">{{name}}</a></h4>
                <p><span class="price">Price: ${{price}}</span> &ThickSpace;|&ThickSpace; <span class="stock">Stock: {{stock}}</span></p>
            </figcaption>
        </figure>
    </article>
    {{/each}}
</section>
    