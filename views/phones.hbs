<h2>{{title}} available</h2>
<section>
    {{#each smartphone_list}}
    <article>
        <h4><a href="/catalog/phones/{{_id}}">{{name}}</a></h4>
        {{#if description}}
        <ul>
            <li>OS: {{description.OS}}</li>
            <li>RAM: {{description.RAM}} GB</li>
            <li>ROM: {{description.ROM}} GB</li>
            <li>Battery: {{description.battery}} mAh</li>
            <li>Cameras: {{description.cameras.camera1}}, {{description.cameras.camera2}}, {{description.cameras.camera3}}</li>
        </ul>
        {{else}}
        <p>No description has been provided for this item.</p>
        {{/if}}
        <p><span class="price">{{price}}</span> | <span class="stock">Stock: {{stock}}</span></p>
    </article>
    {{/each}}
</section>
<section>
    {{#each landline_list}}
    <article>
        <h4><a href="/catalog/phones/{{_id}}">{{name}}</a></h4>
        {{#if description}}
        <p>{{description}}.</p>
        {{else}}
        <p>No description has been provided for this item.</p>
        {{/if}}
        <p><span class="price">{{price}}</span> | <span class="stock">Stock: {{stock}}</span></p>
    </article>
    {{/each}}
</section>